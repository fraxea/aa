<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<?import java.net.URL?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.view.PauseMenuController"
            prefWidth="500" prefHeight="500">
    <top>
        <VBox alignment="BOTTOM_CENTER" prefHeight="60">
            <Label text="Pause"/>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefWidth="500" prefHeight="400" spacing="20">
            <Button text="Guide" onMouseClicked="#guide"/>
            <Button text="Resume" onMouseClicked="#resume"/>
            <HBox alignment="CENTER" spacing="5">
                <RadioButton text="mute" fx:id="mute"/>
                <RadioButton text="track1" fx:id="track1"/>
                <RadioButton text="track2" fx:id="track2"/>
                <RadioButton text="track3" fx:id="track3"/>
            </HBox>
            <Button text="Restart" onMouseClicked="#restart"/>
            <Button text="Quit" onMouseClicked="#quit"/>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@../css/style.css"/>
    </stylesheets>

</BorderPane>
